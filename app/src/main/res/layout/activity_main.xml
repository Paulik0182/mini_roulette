<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/root_layout_style"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/one_text_view"
        style="@style/input_size_style"
        android:hint="@string/initial_value"
        android:inputType="number" />

    <TextView
        android:id="@+id/two_text_view"
        style="@style/input_size_style"
        android:hint="@string/initial_value"
        android:inputType="number" />

    <TextView
        android:id="@+id/three_text_view"
        style="@style/input_size_style"
        android:hint="@string/initial_value"
        android:inputType="number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_button"
        style="@style/standard_button_style"
        android:text="@string/start"
        app:cornerRadius="@dimen/corner_bottom_radius" />

    <TextView
        android:id="@+id/result_text_view"
        style="@style/result_text_style"
        android:text="@string/result" />
</LinearLayout>